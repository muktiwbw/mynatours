header.header
  nav.nav.nav--tours
    a.nav__el(href='/') Natours
    form.nav__search
      button.nav__search-btn
        svg: use(xlink:href='/img/icons.svg#icon-search')
      input.nav__search-input(type='text', placeholder='Search tour')
  .header__logo
    img(src="/img/logo-white.png", alt="Natours logo")
  nav.nav.nav--user
    if currentUser
      // Logged in
      a.nav__el(href="/logout") Logout
      a.nav__el(href="/me")
        img.nav__user-img(src=`/img/users/${currentUser.photo}`, alt="User photo")
        span #{currentUser.name.split(' ')[0]}
    else
      // Guest
      a.nav__el(href='/login') Login
      a.nav__el.nav__el--cta(href='/register') Register